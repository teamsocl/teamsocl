    <Window.OpacityMask>
        <ImageBrush ImageSource="Team_Social_register.png"/>
    </Window.OpacityMask>
    <Window.Background>
        <ImageBrush ImageSource="Team_Social_register.png" TileMode="Tile"/>
    </Window.Background>
    <Grid>
        <Button Content="Register" HorizontalAlignment="Left" Height="37" Margin="561,575,0,0" VerticalAlignment="Top" Width="120" Click="Register_Button"/>
        <TextBox x:Name="register_first_n" HorizontalAlignment="Left" Height="25" Margin="115,204,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="190"/>
        <TextBox x:Name="register_jersey_num" HorizontalAlignment="Left" Height="25" Margin="491,253,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="190"/>
        <TextBox x:Name="register_phone" HorizontalAlignment="Left" Height="25" Margin="115,302,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="190"/>
        <TextBox x:Name="register_pwd" HorizontalAlignment="Left" Height="25" Margin="115,402,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="190"/>
        <TextBox x:Name="register_last_n" HorizontalAlignment="Left" Height="25" Margin="115,253,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="190"/>
        <TextBox x:Name="register_nickname" HorizontalAlignment="Left" Height="25" Margin="491,204,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="190"/>
        <TextBox x:Name="register_email" HorizontalAlignment="Left" Height="25" Margin="115,351,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="190"/>
        <TextBox x:Name="register_pwd_confirm" HorizontalAlignment="Left" Height="25" Margin="491,402,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="190"/>
        <!--<CheckBox x:Name="register_privacy_opt" Content="Privacy Option&#xA;&#xA;Check this box if you want information sharing to be restricted to the Team Captain, rather than allow all teammates &#xD;&#xA;access to your contact information. " HorizontalAlignment="Left" Height="72" Margin="22,496,0,0" VerticalAlignment="Top" Width="659" IsThreeState="True" Checked="register_privacy_opt_Checked"/>-->
        <TextBox x:Name="register_email_confirm" HorizontalAlignment="Left" Height="25" Margin="491,351,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="190"/>
        <Button x:Name="register_cancel" Content="Cancel" HorizontalAlignment="Left" Height="37" Margin="386,575,0,0" VerticalAlignment="Top" Width="120" Click="register_cancel_Click"/>
        <Label Content="First Name*" HorizontalAlignment="Left" Height="25" Margin="22,204,0,0" VerticalAlignment="Top" Width="80"/>
        <Label Content="Nickname" HorizontalAlignment="Left" Height="25" Margin="340,204,0,0" VerticalAlignment="Top" Width="77"/>
        <Label Content="Last Name*" HorizontalAlignment="Left" Height="25" Margin="22,253,0,0" VerticalAlignment="Top" Width="80"/>
        <Label Content="Preferred Jersey Number" HorizontalAlignment="Left" Height="25" Margin="340,253,0,0" VerticalAlignment="Top" Width="142"/>
        <Label Content="Phone*" HorizontalAlignment="Left" Height="25" Margin="22,302,0,0" VerticalAlignment="Top" Width="68"/>
        <Label Content="Email*" HorizontalAlignment="Left" Height="25" Margin="22,351,0,0" VerticalAlignment="Top" Width="57"/>
        <Label Content="Confirm Email" HorizontalAlignment="Left" Height="25" Margin="340,351,0,0" VerticalAlignment="Top" Width="132"/>
        <Label Content="Password*" HorizontalAlignment="Left" Height="25" Margin="22,402,0,0" VerticalAlignment="Top" Width="68"/>
        <Label Content="Confirm password" HorizontalAlignment="Left" Height="25" Margin="340,402,0,0" VerticalAlignment="Top" Width="115"/>
        <Label Content="Password must be 8 - 14 characters including at least one lower-case, one upper-case, one number and one &#xD;&#xA;special character." HorizontalAlignment="Left" Height="49" Margin="107,432,-18,0" VerticalAlignment="Top" Width="659"/>

    </Grid>
</Window>
