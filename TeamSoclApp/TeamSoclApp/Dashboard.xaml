<Window x:Class="TeamSoclApp.Dashboard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Loaded="Window_Loaded"
        Title="Dashboard" Height="512" Width="592.825">
    <Grid>
        <Button x:Name="Logout" Content="Log Out" HorizontalAlignment="Left" Margin="500,10,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click" Height="60"/>
        <TabControl Name="tabControl" HorizontalAlignment="Left" Height="373" Margin="160,99,0,0" VerticalAlignment="Top" Width="415">
            <TabControl.ContentTemplate>
                <DataTemplate>
                    <TextBlock Margin="5" FontSize="18" Text="{Binding Description}"/>

                </DataTemplate>
            </TabControl.ContentTemplate>
            <TabControl.ItemTemplate>
                <DataTemplate>
                    <TextBlock FontSize="14"  Foreground="{Binding Color}" Text="{Binding Title}"/>
                </DataTemplate>
            </TabControl.ItemTemplate>
        </TabControl>

    </Grid>
</Window>
